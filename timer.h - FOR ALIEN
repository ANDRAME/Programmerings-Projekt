#ifndef TIMER_H_
#define TIMER_H_


#include <stdint.h>
#include <stdlib.h>

typedef struct{
	 uint8_t hs;
	 uint8_t s;
	 uint8_t m;
	 uint8_t h;
} time_s;


extern volatile uint8_t gTimeFlag;
extern volatile time_s gTime;

void startTimer();
void stopTimer();
void resetTime();
void setUPTimer(void);
void counting(void);
void printTimer(void);







#endif /* TIMER_H_ */
